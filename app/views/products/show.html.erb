
<div style="margin-top: 40px;"id="product-show" class="container-fluid">
	<div class="row">
		<div class="col-sm-offset-1 col-md-6">
			<% if @product.default_image %>
		  		<%= image_tag @product.default_image.path, :style => "margin: auto; display: block; max-width: 450px" %>
			<% end %>
		</div>
		<div class="col-md-4">

			<h2><%= @product.name %></h2>
			<h1><%= number_to_currency @product.price %></h1> 
			<%= simple_format @product.description %>
			<%= button_to "Add to basket", product_path(@product.permalink), :method => :post, :style => "float: right;" %>
		</div>
	</div>
</div>
