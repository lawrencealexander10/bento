<!DOCTYPE html>
<html>
<head>
  <title>Bento</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

  <%= stylesheet_link_tag "normalize.css" %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="bento" class="site-color">
<%= render :partial => '/shared/wrapbootstrap_header'%>

  <% if notice || alert %>
    <div class="row-fluid">
      <div class="">
      <% if notice || alert %>
      <script type="text/javascript">
          window.setTimeout(function() {
          $("#alert_message").fadeTo(500, 0).slideUp(500, function(){
            $(this).remove(); 
          });
        }, 2000);
      </script>
        <div class="flash_messages">
          <%= raw "<div id='alert_message' style='text-align:center; position: absolute; top:0px' data-alert class='alert-box warning col-md-offset-3 col-md-6'> #{notice}</div>"  if notice %>
          <%= raw "<div id='alert_message' style='text-align:center; position: absolute;  top:0px' data-alert class='alert-box alert col-md-offset-3 col-md-6'>#{alert}</div>"     if alert %>
        </div>
      <% end %>
    </div>
    </div>
  <% end %>
<% if false %>
<% if current_order %>
<p style="border:1px solid black;padding:10px;">
  You have <%= pluralize current_order.total_items, 'item'%> in your basket which cost
  <%= number_to_currency current_order.total_before_tax %>.
</p>
<%= link_to "View basket", basket_path %>
<%= link_to "Checkout", checkout_path %>
<% end%>

<%= flash[:notice] %>
<% end %>


<%= yield %>

</body>
<script>
    $("#site-navigation").sticky({
    topSpacing: 0
  });
</script>

</html>
